<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DCDCDC"
    android:id="@+id/welcome_one_master">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="12">

        <ImageView
            android:layout_width="210dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:padding="0dp"
            android:src="@drawable/me_logo"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/welcome_one_illustration"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:src="@drawable/b3"
            android:layout_marginTop="15dp"
            android:layout_weight="7"/>
        <TextView
            android:id="@+id/welcome_one_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/welcome_one_t"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_weight="0.3"/>
        <TextView
            android:id="@+id/welcome_one_text"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/welcome_one_tx"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:layout_weight="0.3"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>