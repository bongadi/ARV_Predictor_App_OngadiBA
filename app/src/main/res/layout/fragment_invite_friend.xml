<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_marginTop="10dp"
    android:id="@+id/trending_service_layout"
    android:clickable="true"
    android:focusable="true"
    tools:context=".fragments.InviteFriend"
    android:weightSum="7"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/im_list_service_trending"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:src="@drawable/ic_share_link"
        android:background="@color/colorWhite"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:background="@color/colorWhite"
        android:paddingVertical="20dp"
        >
        <TextView
            android:id="@+id/invite_desc"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:text="@string/invite_brief"
            android:textSize="17sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>
    <Button
        android:id="@+id/bt_share_app"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/share_now"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/bt_custom_primary"
        android:layout_marginTop="20dp"
        android:paddingVertical="10dp"
        />
</LinearLayout>