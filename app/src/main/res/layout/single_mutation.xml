<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_service_layout"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/general_ripple_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:weightSum="3">
        <TextView
            android:id="@+id/tv_mut_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="@string/num"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/primary_solid"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"
            />
        <Spinner
            android:id="@+id/value_spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:spinnerMode="dropdown"
            android:background="@drawable/primary_lining"
            android:layout_weight="1.8" />

    </LinearLayout>

</LinearLayout>